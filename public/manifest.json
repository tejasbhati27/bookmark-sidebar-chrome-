{
    "manifest_version": 3,
    "name": "Bookmark",
    "version": "1.0.0",
    "description": "A modern visual reading list for your side panel.",
    "icons": {
        "16": "icon-16.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    },
    "permissions": [
        "sidePanel",
        "activeTab",
        "storage",
        "tabs",
        "contextMenus"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_title": "Open Bookmark",
        "default_icon": {
            "16": "icon-16.png",
            "48": "icon-48.png",
            "128": "icon-128.png"
        }
    },
    "side_panel": {
        "default_path": "index.html"
    },
    "commands": {
        "save-to-last": {
            "suggested_key": {
                "default": "Ctrl+Shift+M",
                "mac": "Command+Shift+M"
            },
            "description": "Save current page to last used category"
        },
        "_execute_action": {
            "suggested_key": {
                "default": "Alt+Q",
                "mac": "Alt+Q"
            },
            "description": "Open Bookmark Side Panel"
        }
    }
}